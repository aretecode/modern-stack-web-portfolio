{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "target": "es2018",
    "lib": ["es2018", "es2017", "es2016", "es2015", "dom"],

    "module": "commonjs",
    "inlineSourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    ".storybook/*.js",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "stories/*.tsx",
    "stories/*.ts",
    "stories/**/*.tsx",
    "stories/**/*.ts",
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/deprecated",
    "src/setupTests.ts"
  ]
}
